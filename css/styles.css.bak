html { 
    font-size: 62.5%;
}

body {
    font-size: 16px; /*1rem = 10px*/
    background-color: var(--principal);
}

:root{
    /*Colores*/
    --blanco: #fff;
    --principal: #3B8B9B ;
    --secundario: #429AAC;
    --oscuro: #173A42;

}

/*Generales*/
    .contenedor{
        width: 120rem;
        margin: 0 auto 0 auto;
    }

    


/*Header*/

.titulo{
    text-align: center;
    font-size: 3.8rem;
}

.subtitulo{
    text-align: center;
    font-size: 3rem;
}

/*Navegaci√≥n Barra*/
.nav-fondo{
    background-color: var(--secundario);
    padding: 1.5rem;
    

}
.barra-superior{
    max-width: 120rem;
    
    display: flex;
    justify-content: space-evenly;
    
}
.barra-superior a{
    text-decoration: none;
}
.footer-style{
    display:flex;   
    flex-direction: column;
    justify-content: space-evenly;

}
.footer-style a{
    color: #fff;
    text-decoration: none;
    text-align: center;
    
}
.footer-style p{
    color: #fff;
    font-weight: bold;
    font-size: 2rem ;


}


/*footer*/
.footer{
    display: flex;
    justify-content: center;
    background-color: var(--oscuro);
    margin-top: 20rem;
    height: 11rem;
    
}